secondary = #e60053
alert = #bd2c40
alert-alt = #f22d26

[bar/main]
;monitor = ${env:MONITOR:DisplayPort-0}
width = 100%
height = 30
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

