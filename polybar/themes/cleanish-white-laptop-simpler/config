[colors]
;background = ${xrdb:color0:#222}
background = #e1ddbb
background-alt = #f8fffe
;foreground = ${xrdb:color7:#222}
foreground = #000
foreground-alt = #55aa55
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
;monitor = ${env:MONITOR:DisplayPort-0}
width = 100%
height = 25
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

dim-value = 1

line-size = 3
line-color = #f00

border-size = 0
border-bottom-size = 0
border-color = #00000000

padding-left = 1
padding-right = 0

module-margin-left = 2
module-margin-right = 2

font-0 = Gohu GohuFont:pixelsize=9;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = "Wuncon Siji:pixelsize=9;1"

modules-left = icon i3 xwindow
modules-center = 
modules-right = xkeyboard email volume pkg network battery date

tray-padding = 2
tray-transparent = true
tray-background = ${colors.background}
tray-position = right
tray-detached = true
tray-offset-y = 1400 # Monitor height - bar height

;wm-restack = i3

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/icon]
type = custom/text
content = 

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = 
format-prefix-foreground = ${colors.background-alt}
;format-prefix-underline = ${colors.secondary}

label-layout = 
;label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-foreground = ${colors.background} 
label-indicator-background = ${colors.foreground}
;label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 4

label-occupied = %index%
label-occupied-padding = 4

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 4

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 4

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.foreground}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = #1a1a1d
label-focused-foreground = ${colors.background}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = 1

ws-icon-default = ?
ws-icon-0 = 0;0
ws-icon-1 = 1;1
ws-icon-2 = 2;2
ws-icon-3 = 3;3
ws-icon-4 = 4;4
ws-icon-5 = 5;5
ws-icon-6 = 6;6
ws-icon-7 = 7;7
ws-icon-8 = 8;8
ws-icon-9 = 9;9

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>
format-offline = <label-offline> mpd is offline :(

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

label-offline =

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 10
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 10
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
label = %percentage_used%%

[module/network]
type = internal/network
interface = wlp6s0

; Seconds to sleep between updates.
; Default: 1
interval = 1

label-connected = %essid%
label-connected-padding = 1

format-connected = <ramp-signal><label-connected>
format-connected-padding = 0

label-disconnected = offline
label-disconnected-padding = 1

format-disconnected = <label-disconnected>
format-disconnected-padding = 1

ramp-signal-0 = " "
ramp-signal-1 = " "
ramp-signal-2 = " "
ramp-signal-3 = " "
ramp-signal-4 = " "
ramp-signal-5 = " "

; Test connectivity every Nth update.
; A value of 0 disables this feature.
; NOTE: Experimental (needs more testing).
; Default: 0
; ping-interval = 3

; @deprecated: Define min width using token specifiers 
; (%downspeed:min% and %upspeed:min%)
; Minimum output width of upload/download rate.
; Default: 3
; udspeed-minwidth = 5

; Accumulate values from all interfaces
; when querying for up/downspeed rate.
; Default: false
accumulate-stats = true

[module/date]
type = internal/date
