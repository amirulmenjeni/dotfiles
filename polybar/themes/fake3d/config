module-margin-right = 0

;font-0 = Gohu GohuFont:size=9
;font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
;font-2 = "Wuncon Siji:pixelsize=4;0"
;font-3 = fontawesome:pixelsize=9
