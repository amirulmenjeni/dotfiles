client.focused          #FFFFFF #FFFFFF #FFFFFF
client.focused_inactive #FF0000 #000000 #FFFFFF
client.unfocused        #0000FF #000000 #FFFFFF
client.urgent           #F00000 #000000 #FFFFFF
client.placeholder      #FF0000 #000000 #FFFFF

client.background       #00FF00


