        active_workspace    #FFFFFF50   #FFFFFFFF       #FF0000FF
        focused_workspace   #FFFFFFF0   #FFFFFF50       #FFFFFFFF
        inactive_workspace  #FFFFFF50   #FFFFFF50       #FFFFFFFF
        separator                                       #FFF74AFF
    }

}
