bindsym $mod+Print exec "scrot -u ~/pictures/screenshots/scrot-%Y-%m-%d-%H-%M-%S.png"
bindsym $mod+Shift_L+Print exec "scrot -s ~/pictures/screenshots/scrot-%Y-%m-%d-%H-%M-%S.png"

# Open file manager
bindsym $mod+n exec urxvt -e ranger 
bindsym $mod+Shift+n exec urxvt -g 120x32 -name "floating-ranger" -e ranger

# xkill
bindsym $mod+Delete exec xkill

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Shift+minus resize shrink width 5 px or 5 ppt
        bindsym Shift+plus resize grow width 5 px or 5 ppt
        bindsym minus resize shrink height 5 px or 5 ppt
        bindsym plus resize grow height 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize shrink height 5 px or 5 ppt
        bindsym Up resize grow height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Gaps
for_window [class="^.*"] border pixel 3
gaps inner 0
gaps outer 0

